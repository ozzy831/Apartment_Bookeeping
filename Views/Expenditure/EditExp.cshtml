@model Apartment_Bookeeping.Models.ExpDetail
@{
    ViewBag.Title = "Edit Item";
}

<h2>Edit Item</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Expenditure</legend>

        @Html.HiddenFor(model => model.ExpenditureID)
        @Html.HiddenFor(model => model.ExpDetailID)

        <div>
            @Html.LabelFor(model => model.Item)
        </div>
        <div>
            @Html.EditorFor(model => model.Item)
            @Html.ValidationMessageFor(model => model.Item)
        </div>

        <div>
            @Html.LabelFor(model => model.Quantity)
        </div>
        <div>
            @Html.EditorFor(model => model.Quantity)
            @Html.ValidationMessageFor(model => model.Quantity)
        </div>

        <div>
            @Html.LabelFor(model => model.Cost)
        </div>
        <div>
            @Html.EditorFor(model => model.Cost)
            @Html.ValidationMessageFor(model => model.Cost)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>

    </fieldset>

    @Html.ActionLink("Back to Details", "Details", new {id = Model.ExpenditureID})
}