            @Html.DisplayFor(modelitem => item.Address)
        </th>
        <th>
            @Html.DisplayFor(modelitem => item.Location.City)
        </th>
        <th>
             @Html.DisplayFor(modelitem => item.Location.State)
        </th>
        <th>
             @Html.DisplayFor(modelitem => item.Location.ZipCode)
        </th>
